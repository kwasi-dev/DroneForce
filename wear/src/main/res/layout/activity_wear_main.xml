<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logan20.droneforce.wearMain"
    tools:deviceIds="wear">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_mainTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/welcome"
            android:layout_marginStart="60dp"
            android:paddingBottom="20dp"
            app:layout_box="all"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:layout_alignParentBottom="true" />


        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/mainLinLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/tv_mainTxt"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnEmergencyLand"
                android:background="@drawable/emergency_disabled"

                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnConnect"
                android:background="@drawable/connect_enabled"
                android:clickable="true"
                android:onClick="setUp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/btnEmergencyLand" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnAutoTakeoff"
                android:background="@drawable/auto_hover_disabled"

                android:onClick="toggleAutoTakeoff"
                android:layout_alignTop="@+id/btnEmergencyLand"
                android:layout_toEndOf="@+id/btnConnect" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.wearable.view.BoxInsetLayout>