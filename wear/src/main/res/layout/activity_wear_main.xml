<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logan20.droneforce.wearMain"
    tools:deviceIds="wear">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainRelLayout">


        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/buttonRelLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnConnect"
                android:background="@drawable/connect_enabled"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:onClick="setUp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_mainTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:paddingBottom="20dp"
            android:textSize="25sp"
            app:layout_box="all"
            android:layout_above="@+id/buttonRelLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp" />
    </RelativeLayout>
</android.support.wearable.view.BoxInsetLayout>